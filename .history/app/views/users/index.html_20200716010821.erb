<div class="container mt-3">
  <div class="row">
    <div class="offset-md-2 col-md-8">
      <h1 class="text-center">SaaS Community</h1>
      <p class="text-center">Welcome to the SaaS community. Users must fill out a profile in order to be visible in the community.</p>
      <ul class="list-unstyled">
        <% @users.each do |user| %>
          <% if user.profile %>
            <li class="mb-3">
              <div class="card bg-light row <%= cycle('white-bg', '') %>">
                <div class="card-body">
                  <div class="col-md-4 text-center">
                    <% if user.profile.avatar %>
                      <%= link_to user do %>
                        <%= image_tag user.profile.avatar.url, class: 'user-index-avatar' %>
                      <% end %>
                    <% end %>
                  </div>
                  <div class="col-md-8">
                    <%= link_to user do %>
                      <h2><%= user.profile.first_name %> <%= user.profile.last_name %></h2>
                    <% end %>
                    <p>
                      <%= user.profile.job_title %>
                      <% if user.plan_id == 2 %>
                        <span class="label label-danger">PRO</span>
                      <% end %>
                    </p>
                  </div>
                </div>
              </div>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>